<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.FreaksLabor" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#2E2E2E</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="preferenceTheme">@style/AppTheme.PreferenceTheme</item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">#2E2E2E</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/logo
        </item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">1000</item>
        <item name="android:windowSplashScreenBrandingImage" tools:targetApi="s">
            @drawable/branding
        </item>
    </style>

    <style name="AppTheme.PreferenceTheme" parent="PreferenceThemeOverlay.v14.Material">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="Theme.FreaksLabor.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FreaksLabor.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FreaksLabor.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>