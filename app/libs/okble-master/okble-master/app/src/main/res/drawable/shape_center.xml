<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >
    <item
        android:top="-2dp"
        android:right="0dp"
        android:bottom="-2dp"
        android:left="0dp">
        <shape>
            <!-- 边框的颜色 ：不能和窗口背景色一样 -->
            <stroke
                android:width="1dp"
                android:color="@color/colorPrimary" />
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->


            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
        </shape>
    </item>





</layer-list>